<% provide(:title, @user.name) %>
<div class="photo_area"></div>
  <div class="container-fluid">
    <div class="row signup" style="position:fixed; width:100%;">
      <div class="col-md-6 header">
        <div class="special-text link padding-side">
          <p style="margin:auto;">Web Aquarium.</p>
        </div>
      </div>
        <div class="col-md-6 header">
        <div class="text-right padding-side">
            <ul style="list-style:none;">
            <li class="dropdown">
              <a href="#" class="dropdown-toggle special-text link" data-toggle="dropdown">
                Account <b class="caret"></b>
              </a>
              <ul class="dropdown-menu text-center">
                <li><%= link_to "Profile", current_user %></li>
                <li><%= link_to "Settings", '#' %></li>
                <li class="divider text-center"></li>
                  <li>
                    <%= link_to "Log out", logout_path, method: :delete %>
                  </li>
              </ul>
            </li>
            </ul>
        </div>
        </div>
    </div>
      <div class="row signup">
